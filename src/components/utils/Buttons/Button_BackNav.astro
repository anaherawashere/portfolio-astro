---
interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<a
  href={href}
  class="group mt-6 inline-flex w-auto gap-x-2 items-center lg:px-6 font-semibold text-heading hover:text-purple"
  ><span aria-hidden="true"
    ><i
      class="fa-solid fa-angle-left text-xs ease-in duration-100 group-hover:-translate-x-[2px]"
    ></i></span
  >{title}</a
>