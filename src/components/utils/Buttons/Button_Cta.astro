---
interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<a
  href={href}
  class="group mt-6 inline-flex w-auto px-4 py-1 gap-x-2 font-normal text-sm text-white ease-in duration-100 rounded-full bg-purple hover:bg-darkest"
  >{title}<span aria-hidden="true"
    ><i class="fa-solid fa-chevron-right text-xs ease-in duration-100 group-hover:translate-x-[2px]"></i></span
  ></a
>
