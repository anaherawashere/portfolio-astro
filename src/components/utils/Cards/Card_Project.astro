---
interface Props {
  year?: number;
  title: string;
  description?: string;
  company?: string;
  image?: string;
  link: string;
  tech: string[];
}

const { title, description, image, link, tech } = Astro.props;
---

<a href={link} target="_blank">
  <div class="group flex gap-x-6 py-5 lg:px-6 rounded-md ease-in duration-100 hover:bg-purple hover:bg-opacity-10">
    <div class="w-1/4">
      <div class="shadow-xl overflow-hidden rounded-sm">
        <img src={image} alt={title} loading="lazy" />
      </div>
    </div>
    <div class="w-3/4">
      <h3 class="mb-2 flex gap-x-2 text-lg font-semibold text-heading group-hover:text-purple ease-in duration-100">
        {title}<span class=""
        ><i class="fa-solid fa-arrow-right -rotate-45 text-xs"></i></span
      >
      </h3>
      <p class="mb-4 text-sm">
        {description}
      </p>
      <ul class="flex flex-wrap gap-2">
        {
          tech.map((el) => (
            <li class="bg-purple bg-opacity-30 px-3 py-1 text-xs font-normal uppercase tracking-wider text-heading rounded-full">
              {el}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</a>
