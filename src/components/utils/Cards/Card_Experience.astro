---
interface Props {
  date: string;
  role: string;
  company: string;
  description: string;
  href: string;
}

const { date, role, company, description, href } = Astro.props;
---

<a href={href} target="_blank"
  ><div class="flex gap-x-6 py-5 px-6 rounded-md hover:bg-yellow-400 hover:bg-opacity-10 ease-in duration-200">
    <div class="w-1/4">
      <h3 class="text-xs uppercase">{date}</h3>
    </div>
    <div class="w-3/4">
      <h4 class="mb-3 text-lg font-semibold text-zinc-900">
        {role}
      </h4>
      <p class="text-sm">
        {description}
      </p>
    </div>
  </div></a
>
