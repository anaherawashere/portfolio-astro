---
import SectionHeading from "../SectionHeading.astro";
import SectionSubheading from "../SectionSubheading.astro";
import Card from "../utils/Cards/Card_Project.astro";

const allProjects = await Astro.glob("../../content/projects/*.md");
---

<div>
  <SectionHeading>Selected Projects</SectionHeading>
  <SectionSubheading
    >Here are some of my recent projects. I'm always working on something new,
    so check back often!</SectionSubheading
  >
  <div class="flex flex-col gap-y-3">
    {
      allProjects.map((project) => (
        <Card
          title={project.frontmatter.title}
          description={project.frontmatter.description}
          image={project.frontmatter.image}
          link={project.frontmatter.link}
          tech={project.frontmatter.tech}
        />
      ))
    }
    <a
      href="/archive"
      class="mt-6 flex gap-x-2 hover:gap-x-3 px-6 font-semibold text-zinc-900 hover:text-yellow-800 ease-in duration-300"
      >View Full Project Archive<span
        ><i class="fa-solid fa-arrow-right text-sm"></i></span
      ></a
    >
  </div>
</div>
